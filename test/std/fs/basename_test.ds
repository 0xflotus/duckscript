
os = os_family
windows = equals os "windows"

function test_relative_path
    if ${windows}
        value = basename .\\test.txt
    else
        value = basename ./test.txt
    end

    assert_eq ${value} test.txt
end

function test_full_path
    if ${windows}
        value = basename c:\\dir\\dir\\test.txt
    else
        value = basename /dir/dir/test.txt
    end

    assert_eq ${value} test.txt
end
